---
import BaseCard from '../common/BaseCard.astro';
import BaseCardTitle from '../common/BaseCardTitle.astro';

interface DangoSkill {
  text: string;
  emoji: string;
}

interface Props {
  title: string;
  description: string;
  dangos: {
    lvl4?: DangoSkill;
    lvl3?: DangoSkill;
    lvl2?: DangoSkill;
    lvl1?: DangoSkill;
  };
  class?: string;
  hoverable?: boolean;
  scaled?: boolean;
  href?: string;
  disabled?: boolean;
}

const {
  title,
  description,
  dangos,
  class: className,
  hoverable = true,
  scaled = true,
  href,
  disabled = false,
} = Astro.props;
---

<BaseCard
  class={className}
  hoverable={hoverable}
  scaled={scaled}
  href={href}
  disabled={disabled}
  dataAttribute="data-dango-card-auto-hover"
>
  <div class="p-4 sm:p-6 md:p-8 h-full flex flex-col">
    <!-- Header -->
    <BaseCardTitle title={title} class="mb-2" />

    <!-- Description -->
    <p class="text-sm text-text/80 mb-6">
      {description}
    </p>

    <!-- Dango Skills -->
    <div class="space-y-4 mt-auto">
      {
        [4, 3, 2, 1].map((level, index) => {
          const skill = dangos[`lvl${level}` as keyof typeof dangos];
          if (!skill) return null;

          return (
            <div class="flex items-center gap-3" style={`transition-delay: ${index * 0.1}s`}>
              <span class="text-sm font-medium text-text/60 group-hover:text-secondary transition-colors duration-300">
                Level {level}
              </span>
              <div class="flex-1 flex items-center gap-2 px-3 py-2 rounded-lg bg-text/5">
                <span class="text-xl">{skill.emoji}</span>
                <span class="text-sm font-medium">{skill.text}</span>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</BaseCard>

<script>
  import autoHoverDirective from '../../directives/auto-hover';
  document.querySelectorAll('[data-dango-card-auto-hover]').forEach((element) => {
    if (element instanceof HTMLElement) autoHoverDirective(element);
  });
</script>

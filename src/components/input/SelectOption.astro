---
interface Props {
  value: string | null;
  selected?: boolean;
}

const { value, selected = false } = Astro.props;
---

<div
  class="px-4 py-3 cursor-pointer transition-colors hover:bg-background-dark hover:bg-primary-lighter hover:text-background"
  data-select-option
  data-value={value}
  data-selected={selected}
>
  <slot />
</div>

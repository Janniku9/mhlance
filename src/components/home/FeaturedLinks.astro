---
import { Icon } from 'astro-icon/components';
import Badge from '../common/Badge.astro';
import BaseCard from '../common/BaseCard.astro';
import type { FeaturedLink } from '../../types/Navigation';
import BaseCardTitle from '../common/BaseCardTitle.astro';

interface Props {
  currentGame: {
    title: string;
    featuredLinks: FeaturedLink[];
  };
}

const getSectionTypeColor = (type: string) => {
  switch (type) {
    case 'builds':
      return 'bg-primary/20 text-primary border-primary/30';
    case 'guides':
      return 'bg-secondary/20 text-secondary border-secondary/30';
    case 'data':
      return 'bg-warning/20 text-warning border-warning/30';
    case 'tools':
      return 'bg-success/20 text-success border-success/30';
    default:
      return 'bg-text/20 text-text border-text/30';
  }
};

const { currentGame }: Props = Astro.props;
---

<section class="py-12 md:py-32 px-3 md:px-4 md:px-8 bg-background-dark relative overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute left-0 top-0 w-full h-full overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 -left-10 w-20 h-20 bg-primary/10 rounded-full blur-xl"></div>
    <div class="absolute bottom-1/4 -right-10 w-32 h-32 bg-secondary/10 rounded-full blur-xl"></div>
  </div>

  <div class="relative max-w-6xl mx-auto">
    <div class="text-center mb-4 md:mb-12">
      <h2 class="text-2xl md:text-4xl font-bold mb-4 text-primary uppercase">featured content</h2>
      <p class="text-md md:text-lg text-text/70 lowercase">
        essential guides and builds for {currentGame.title} lance mastery
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-3 md:gap-6">
      {
        currentGame.featuredLinks.map((link) => (
          <BaseCard
            href={link.href}
            class="p-3 md:p-6 hover:scale-105 bg-background-dark/50 backdrop-blur-sm"
          >
            <div class="flex items-start gap-4">
              <div
                class="text-3xl bg-text/7 rounded-xl p-2 md:p-4 animate-float"
                style={`animation-delay: ${Math.random() * 2}s;`}
              >
                {link.emoji}
              </div>
              <div class="flex-1">
                <BaseCardTitle title={link.title} class="mb-1 md:mb-2" />
                <p class="text-text/70 text-xs md:text-sm leading-relaxed mb-2 md:mb-3 lowercase">
                  {link.description}
                </p>
              </div>
              <div class="flex items-center ml-auto">
                <Icon
                  name="mingcute:arrow-right-line"
                  class="w-7 md:w-10 h-7 md:h-10 text-secondary-light group-hover:text-secondary group-hover:translate-x-1 transition-all"
                />
              </div>
            </div>
          </BaseCard>
        ))
      }
    </div>
  </div>
</section>

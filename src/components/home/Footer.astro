---
import { Icon } from 'astro-icon/components';
import BaseCard from '../common/BaseCard.astro';
import type { Social } from '../../types/Socials';

interface Props {
  socials: Social[];
  currentGame: {
    emoji: string;
    title: string;
  };
}

const { socials, currentGame }: Props = Astro.props;
---

<section class="py-16 px-4 md:px-8 bg-background-dark">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-secondary uppercase">join the hunt</h2>
      <p class="text-lg text-text/70 lowercase">
        connect with fellow {currentGame.title} lance hunters
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        socials.map((social: { url: any; icon: unknown; name: unknown; description: unknown }) => (
          <BaseCard href={social.url} class="p-6 hover:scale-105">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-text/5 rounded-xl flex items-center justify-center">
                <Icon name={social.icon} class="w-6 h-6 text-primary" />
              </div>
              <div>
                <h3 class="font-bold text-lg group-hover:text-primary transition-colors uppercase">
                  {social.name}
                </h3>
                <p class="text-text/60 text-sm lowercase">{social.description}</p>
              </div>
              <Icon
                name="mingcute:arrow-right-line"
                class="w-5 h-5 text-text/40 group-hover:text-primary group-hover:translate-x-1 transition-all ml-auto"
              />
            </div>
          </BaseCard>
        ))
      }
    </div>

    <!-- Hidden MH Easter Egg -->
    <div class="text-center mt-12">
      <button
        onclick="this.innerHTML = this.innerHTML === '🥩' ? 'felyne says meow! 🐱' : '🥩'"
        class="text-2xl opacity-50 hover:opacity-100 transition-opacity cursor-pointer"
        title="psst... click me hunter!"
      >
        🥩
      </button>
    </div>
  </div>
</section>

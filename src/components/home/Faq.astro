---
import { Icon } from 'astro-icon/components';
import type { FAQ } from '../../types/faq';
import BaseCard from '../common/BaseCard.astro';

interface Props {
  faq: FAQ[];
  currentGame: {
    emoji: string;
    title: string;
  };
}

const { faq, currentGame } = Astro.props;
---

<section class="py-12 md:py-32 px-3 md:px-4 md:px-8 bg-background-darker relative">
  <div class="max-w-4xl mx-auto relative pt-8">
    <div class="text-center mb-4 md:mb-12">
      <h2 class="text-2xl md:text-4xl font-bold mb-4 text-primary uppercase">
        frequently asked questions
      </h2>
      <p class="text-md md:text-lg text-text/70 lowercase">
        common questions about {currentGame.title} lance gameplay
      </p>
    </div>

    <div class="space-y-3 md:space-y-4">
      {
        faq.map((faq: FAQ, _: number) => (
          <BaseCard class="p-3 md:p-6" hoverable={false}>
            <details class="group">
              <summary class="flex items-center justify-between cursor-pointer list-none">
                <h3 class="font-bold text-xs md:text-lg pr-2 md:pr-4 uppercase">{faq.question}</h3>
                <Icon
                  name="mingcute:down-line"
                  class="w-4 md:w-5 h-4 md:h-5 text-text/40 transition-transform group-open:rotate-180 flex-shrink-0"
                />
              </summary>
              <div class="mt-3 md:mt-4 pt-3 md:pt-4 border-t border-text/10">
                <p class="text-text/80 leading-relaxed text-xs md:text-base lowercase">
                  {faq.answer}
                </p>
                {faq.link && (
                  <a
                    href={faq.link}
                    target="_blank"
                    class="inline-flex items-center gap-1 mt-2 md:mt-3 text-primary hover:text-primary-light transition-colors text-xs md:text-sm font-medium uppercase"
                  >
                    learn more
                    <Icon name="mingcute:external-link-line" class="w-3 md:w-4 h-3 md:h-4" />
                  </a>
                )}
              </div>
            </details>
          </BaseCard>
        ))
      }
    </div>
  </div>
</section>

---
interface Props {
  title: string;
  emoji: string;
}

const { title, emoji } = Astro.props;
---

<div class="flex flex-col items-start w-full max-w-6xl mx-auto px-4">
  {/* Header */}
  <div class="flex items-center gap-2 mb-4">
    {emoji && <span class="text-xl bg-text/5 rounded-lg p-1.5">{emoji}</span>}
    <h3 class="text-lg md:text-2xl font-semibold text-primary-light uppercase">
      {title}
    </h3>
  </div>

  {/* Content */}
  <div class="w-full">
    <slot />
  </div>
</div>

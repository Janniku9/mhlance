---
import { Icon } from 'astro-icon/components';
import { socials } from '../../data/Socials';

const classList = Astro.props.class;
---

<footer class={`w-full px-4 py-6 md:py-8 ${classList}`}>
  <div class="flex flex-col items-center justify-center gap-6 md:gap-8">
    <div class="flex flex-wrap justify-center items-center gap-4 md:gap-6">
      {
        socials.map((social) => {
          return (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex flex-col items-center gap-1 md:gap-2 transition-colors hover:text-primary"
              aria-label={`Check out the ${social.name}`}
            >
              <div class="relative bg-background-dark rounded-full p-2 md:p-3 transition-all duration-300 group-hover:scale-105 group-hover:shadow-2xl group-hover:shadow-primary/5">
                <div
                  class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent 
                         rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300"
                />
                <Icon
                  name={social.icon}
                  class="w-6 h-6 md:w-8 md:h-8 relative z-10 group-hover:text-primary transition-colors"
                />
              </div>
              <span class="text-xs md:text-sm group-hover:text-primary transition-colors">
                {social.description}
              </span>
            </a>
          );
        })
      }
    </div>
    <p class="text-xs md:text-sm text-text/60 text-center">
      Made with ❤️ by the Monster Hunter Lance community
    </p>
  </div>
</footer>

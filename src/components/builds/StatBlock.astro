---
interface Props {
  label: string;
  value: number | string;
  icon: any; // Astro handles passing emojis or components
  class?: string;
}

const { label, value, icon, class: className } = Astro.props;
---

<div class:list={['flex flex-col gap-1', className]}>
  <span class="text-sm text-text/60">{label}</span>
  <div class="flex items-center gap-2">
    <div class="w-8 h-8 flex items-center justify-center">
      {icon}
    </div>
    <span class="text-lg font-medium">{value}</span>
  </div>
</div>

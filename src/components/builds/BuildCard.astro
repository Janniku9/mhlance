---
import StatBlock from './StatBlock.astro';
import SharpnessBar from './SharpnessBar.astro';
import ImageModal from '../common/ImageModal.astro';
import type { Game } from '../../types/Game';

import type { Build, AugmentType } from '../../types/builds/Build';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import {
  getElementEmoji,
  getStatusEmoji,
  getAugmentColor,
  getAugmentTooltip,
  getScrollImage,
  getRampageDecoColor,
} from '../../utils/BuildUtils';
import ToolTip from '../common/ToolTip.astro';
import BaseCard from '../common/BaseCard.astro';
import Badge from '../common/Badge.astro';
import BaseCardTitle from '../common/BaseCardTitle.astro';

interface Props {
  build: Build;
  noTopRounding?: boolean;
  class?: string;
}

// get game from url
const segments = Astro.url.pathname.split('/').filter(Boolean);
const gameId = segments[0] as Game;

const { build, noTopRounding, class: className } = Astro.props;

// Generate unique modal ID for this build
const modalId = `build-image-modal-${build.title.replace(/\s+/g, '-').toLowerCase()}`;
---

<BaseCard
  class={className}
  hoverable={true}
  scaled={true}
  noTopRounding={noTopRounding}
  dataAttribute="data-build-card-auto-hover"
>
  <!-- Header Section -->
  <div class="p-4 md:p-6 border-b border-text/10">
    <div class="flex flex-col gap-6">
      <!-- Title and Stats Row -->
      <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6">
        <!-- Title -->
        <BaseCardTitle title={build.title} />
      </div>

      <!-- Image with Expand Button -->
      {
        build.image && (
          <div class="max-w-2xl mx-auto relative rounded-lg overflow-hidden group">
            <Image
              src={build.image}
              alt={build.imageAlt || build.title}
              class="object-contain w-full"
            />
            <!-- Expand Button -->
            <button
              type="button"
              class="absolute top-3 right-3 bg-background-dark/80 backdrop-blur-sm border border-text/10 rounded-xl p-2 opacity-0 group-hover:opacity-100 transition-all duration-300 hover:bg-background-darker hover:scale-105"
              aria-label="Expand image"
              data-expand-image={modalId}
            >
              <Icon
                name="mingcute:fullscreen-line"
                class="w-4 h-4 text-text/70 hover:text-primary transition-colors duration-300"
              />
            </button>
          </div>
        )
      }
    </div>
  </div>

  <!-- Bottom Section -->
  <div class="flex flex-col md:flex-row">
    <!-- Right Side - Description -->
    <div
      class="flex-1 order-2 md:order-1 p-6 md:p-8 border-b md:border-b-0 md:border-r border-text/10"
    >
      {
        build.description?.map((desc: string) => (
          <p class="text-sm text-text/70 mb-4 last:mb-0">{desc}</p>
        ))
      }

      {
        build.additionalNotes && (
          <div class="mt-8">
            {Object.entries(build.additionalNotes).map(([key, note]) => (
              <div class="mb-4 last:mb-0">
                <span class="text-sm font-medium text-secondary-light block mb-1 capitalize">
                  {key}
                </span>
                <p class="text-sm text-text/80">{note}</p>
              </div>
            ))}
          </div>
        )
      }
    </div>

    <!-- Left Side - Build Configuration -->
    <div class="flex-1 order-1 md:order-2 p-6 md:p-8">
      <!-- Stats Section -->
      <div class="flex flex-col gap-6 mb-6">
        <!-- Core Stats Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <StatBlock label="EFFECTIVE RAW" value={build.stats.raw} icon="âš”ï¸" />

          {
            build.stats.element && (
              <StatBlock
                label={`${build.stats.element.type} ELEMENT`}
                value={build.stats.element.value}
                icon={getElementEmoji(build.stats.element.type)}
              />
            )
          }

          {
            build.stats.status && (
              <StatBlock
                label={`${build.stats.status.type} STATUS`}
                value={build.stats.status.value}
                icon={getStatusEmoji(build.stats.status.type)}
              />
            )
          }

          <StatBlock label="AVG AFFINITY" value={`${build.stats.affinity.avg}%`} icon="ðŸŽ¯" />
        </div>
      </div>

      <!-- Sharpness Bar -->
      <SharpnessBar hits={build.stats.sharpness.hits} type={build.stats.sharpness.type} />

      <!-- Augments -->
      {
        build.augments && (
          <div class="mb-6">
            <span class="text-sm text-secondary-light group-hover:text-secondary block mb-2">AUGMENTS</span>
            <div class="flex flex-wrap gap-1">
              {build.augments.map((augment: AugmentType) => (
                <div class="group/monster relative">
                  <div class:list={['hexagon', 'w-5 h-5 md:w-8 md:h-8', getAugmentColor(augment, gameId)]} />
                  <ToolTip text={getAugmentTooltip(augment)} />
                </div>
              ))}
            </div>
          </div>
        )
      }

      <div class="flex justify-between">
        <!-- Rampage Decorations -->
        {
          build.rampageDecos && (
            <div class="mb-6">
              <span class="text-sm text-secondary-light group-hover:text-secondary block mb-2">RAMPAGE DECORATION</span>
              <div class="flex flex-wrap gap-2">
                {Array.isArray(build.rampageDecos) ? (
                  build.rampageDecos.map((deco) => (
                    <Badge text={deco} color={getRampageDecoColor(deco)} />
                  ))
                ) : (
                  <Badge
                    text={build.rampageDecos}
                    color="bg-primary/20 text-primary"
                    class="uppercase"
                  />
                )}
              </div>
            </div>
          )
        }

        <!-- Scroll with Image -->
        {
          build.scroll && (
            <div class="mb-6">
              <span class="text-sm text-secondary-light group-hover:text-secondary block mb-2">SCROLL</span>
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 relative">
                  <Image
                    src={getScrollImage(build.scroll)}
                    alt={build.scroll}
                    class="w-full h-full"
                  />
                </div>
                <span class="text-sm font-medium">{build.scroll.toLocaleLowerCase()} scroll</span>
              </div>
            </div>
          )
        }
      </div>
    </div>
  </div>
</BaseCard>

<!-- Reusable Image Modal -->
{
  build.image && (
    <ImageModal id={modalId}>
      <Image
        src={build.image}
        alt={build.imageAlt || build.title}
        class="object-contain max-w-full max-h-[90vh] w-auto h-auto"
      />
    </ImageModal> 
  )
}

<style>
  .hexagon {
    position: relative;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
    transition: transform 0.2s ease;
  }

  .hexagon:hover {
    transform: scale(1.1);
  }
</style>

<script>
  import autoHoverDirective from '../../directives/auto-hover';
  
  // Auto hover functionality
  document.querySelectorAll('[data-build-card-auto-hover]').forEach((element) => {
    if (element instanceof HTMLElement) autoHoverDirective(element);
  });
</script>
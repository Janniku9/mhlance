---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div
  class="absolute pointer-events-none bottom-full left-1/2 -translate-x-1/2 mb-2 opacity-0 group-hover/monster:opacity-100 transition-all duration-200 z-50"
>
  <div
    class="bg-background-darker text-text px-3 py-1.5 rounded-lg text-sm border border-text/10 shadow-xl whitespace-nowrap"
  >
    {text}
  </div>
  <slot />
</div>

---
import { Icon } from 'astro-icon/components';

interface Props {
  href: string;
  text: string;
  icon?: string;
  emoji?: string;
}

const { href, text, icon, emoji } = Astro.props;
---

<a
  href={href}
  class="group flex items-center justify-center gap-3 px-6 sm:px-8 py-3 sm:py-4
         bg-primary/10 text-primary hover:bg-primary/20
         border border-primary/30 rounded-xl shadow-sm
         transition-all duration-300 ease-in-out hover:shadow-md hover:scale-102"
>
  {
    icon && (
      <Icon
        name={icon}
        class="w-5 h-5 sm:w-6 sm:h-6 text-primary group-hover:text-primary-dark transition-colors"
      />
    )
  }
  {emoji && <span class="text-2xl animate-subtle-float">{emoji}</span>}
  <span class="font-medium transition-colors">
    {text}
  </span>
  <Icon
    name="mingcute:arrow-right-line"
    class="w-5 h-5 sm:w-6 sm:h-6 transform group-hover:translate-x-1 transition-all duration-300"
  />
</a>

<style>
  @keyframes subtle-float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }
  .animate-subtle-float {
    animation: subtle-float 3s ease-in-out infinite;
  }
  .hover\:scale-102:hover {
    transform: scale(1.02);
  }
</style>

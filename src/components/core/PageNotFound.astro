---
import MainLayout from '../../layouts/MainLayout.astro';
import { Icon } from 'astro-icon/components';
---

<MainLayout title="404 - Page Not Found">
  <div class="container mx-auto px-4">
    <div class="min-h-screen flex flex-col items-center justify-center py-20 relative">
      <!-- Large Emoji -->
      <div class="text-7xl sm:text-8xl animate-float mb-8">ðŸ˜¿</div>

      <!-- Error Message -->
      <h1
        class="text-5xl sm:text-6xl font-bold mb-4 text-primary transition-all duration-300 hover:scale-110 hover:text-warning"
      >
        404
      </h1>

      <!-- Description with Lance emoji -->
      <p class="text-xl sm:text-2xl text-text/80 mb-4 text-center">
        <span>Your lance</span>
        <span class="inline-block animate-spin-slow">ðŸŽ¯</span>
        <span>missed its mark...</span>
      </p>

      <p class="text-lg sm:text-xl text-text/60 mb-12">Even the best hunters get lost sometimes!</p>

      <!-- Navigation Button -->
      <a
        href="/"
        class="group relative bg-background-dark border border-text/10 rounded-full px-6 sm:px-8 py-3 sm:py-4
        transition-all duration-300 hover:bg-background-darker hover:scale-105 hover:shadow-2xl
        hover:shadow-primary/5 flex items-center gap-3"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300"
        >
        </div>
        <Icon
          name="mingcute:campground-fill"
          class="w-5 h-5 sm:w-6 sm:h-6 group-hover:text-primary transition-colors"
        />
        <span class="group-hover:text-primary transition-colors">Return to Base Camp</span>
        <Icon
          name="mingcute:arrow-right-line"
          class="w-5 h-5 sm:w-6 sm:h-6 transform group-hover:translate-x-2 group-hover:text-primary transition-all duration-300"
        />
      </a>

      <!-- Background Stars -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        {
          Array.from({ length: 50 }).map((_, i) => (
            <div
              class="absolute rounded-full bg-white animate-twinkle"
              style={`
              left: ${Math.random() * 100}%;
              top: ${Math.random() * 100}%;
              width: ${Math.random() * 3 + 1}px;
              height: ${Math.random() * 3 + 1}px;
              opacity: ${Math.random() * 0.5 + 0.5};
              animation-delay: ${Math.random() * 3}s;
            `}
            />
          ))
        }
      </div>
    </div>
  </div>

  <style>
    @keyframes twinkle {
      0%,
      100% {
        opacity: 1;
      }
      50% {
        opacity: 0.3;
      }
    }

    @keyframes float {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-20px);
      }
    }

    .animate-twinkle {
      animation: twinkle 3s ease-in-out infinite;
    }

    .animate-float {
      animation: float 6s ease-in-out infinite;
    }

    .animate-spin-slow {
      animation: spin 4s linear infinite;
    }

    @keyframes spin {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }
  </style>
</MainLayout>

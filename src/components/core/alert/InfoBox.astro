---
import { Icon } from 'astro-icon/components';

interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<div
  class:list={[
    'relative bg-info/5 border border-info/20 rounded-xl p-6 transition-all duration-300 group hover:bg-info/10 hover:border-info/30',
    className,
  ]}
>
  <div
    class="absolute inset-0 bg-gradient-to-br from-info/10 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-all duration-300"
  >
  </div>

  <div class="flex gap-4">
    <div class="flex-shrink-0">
      <div
        class="w-8 h-8 rounded-lg bg-info/20 flex items-center justify-center group-hover:bg-info/30 transition-colors"
      >
        <Icon name="mingcute:information-fill" class="w-10 h-10 text-info" />
      </div>
    </div>

    <div class="flex flex-col gap-4 text-text/90">
      <slot />
    </div>
  </div>
</div>

---
import { socials } from '../../../data/Socials';
import { contributors } from '../../../data/Contributors';
import ContributorScroll from './FooterContributors.astro';
import QuickLinks from './FooterQuickLinks.astro';
import SocialIconButton from '../../common/SocialIconButton.astro';

const classList = Astro.props.class;
const currentYear = new Date().getFullYear();
---

<footer class={`w-full border-t border-text/10 relative ${classList}`}>
  <!-- Gradient Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-background-dark to-secondary/5 opacity-70">
  </div>

  <div class="relative flex flex-col items-center justify-center gap-12 py-10">
    <!-- Social Links and Quick Links Section -->
    <div class="w-full max-w-9xl grid grid-cols-1 lg:grid-cols-3 gap-4 md:gap-8 px-2 md:px-8">
      <!-- Social Links -->
      <div class="flex flex-col items-center lg:items-start gap-4">
        <h3 class="text-sm font-medium text-secondary-light uppercase tracking-wider">Community</h3>
        <div class="flex items-center gap-4">
          {
            socials.map((social) => (
              <SocialIconButton
                icon={social.icon}
                url={social.url}
                name={social.name}
                description={social.description}
              />
            ))
          }
        </div>
        <p class="text-xs text-text/60 text-center lg:text-left mt-2">
          Chat with us in #lance! Feel like contributing?
        </p>
      </div>

      <!-- Quick Game Links - Takes up 2 columns on large screens -->
      <div class="lg:col-span-2">
        <QuickLinks />
      </div>
    </div>

    <!-- Contributors Scroll -->
    <div class="w-full">
      <ContributorScroll contributors={contributors} />
    </div>

    <!-- Footer Text -->
    <div class="text-center space-y-2">
      <p class="text-sm text-text/60">Made with ❤️ by the Monster Hunter Lance community</p>
      <p class="text-xs text-text/40">© {currentYear}</p>
    </div>
  </div>
</footer>

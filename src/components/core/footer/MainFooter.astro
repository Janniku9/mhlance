---
import { socials } from '../../../data/Socials';
import { contributors } from '../../../data/Contributors';
import SocialLink from './FooterSocials.astro';
import ContributorScroll from './FooterContributors.astro';
import QuickLinks from './FooterQuickLinks.astro';

const classList = Astro.props.class;
const currentYear = new Date().getFullYear();
---

<footer class={`w-full border-t border-text/10 relative ${classList}`}>
  <!-- Gradient Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-background-dark to-secondary/5 opacity-70">
  </div>

  <div class="relative flex flex-col items-center justify-center gap-8 py-12">
    <!-- Social Links and Quick Links Section -->
    <div class="w-full max-w-5xl grid grid-cols-1 md:grid-cols-2 gap-8 px-4">
      <!-- Quick Game Links - First on mobile, second on desktop -->
      <div class="md:order-2">
        <QuickLinks />
      </div>

      <!-- Social Links - Second on mobile, first on desktop -->
      <div class="flex flex-col items-center md:items-start gap-4 md:order-1">
        <h3 class="text-sm font-medium text-text/60 uppercase">Community</h3>
        <div class="flex items-center gap-6">
          {socials.map((social) => <SocialLink {...social} />)}
        </div>
      </div>
    </div>

    <!-- Contributors Scroll -->
    <div class="w-full">
      <ContributorScroll contributors={contributors} />
    </div>

    <!-- Footer Text -->
    <div class="text-center space-y-2">
      <p class="text-sm text-text/60">Made with ❤️ by the Monster Hunter Lance community</p>
      <p class="text-xs text-text/40">© {currentYear}</p>
    </div>

    <div class="flex h-4"></div>
  </div>
</footer>

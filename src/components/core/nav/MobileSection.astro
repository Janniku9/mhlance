---
import type { NavItem } from '../../../types/Navigation';

interface Props {
  title: string;
  items: NavItem[];
  baseUrl: string;
}

const { title, items, baseUrl } = Astro.props;
---

<div>
  <h3 class="text-primary font-semibold mb-3">{title}</h3>
  <ul class="space-y-3">
    {
      items.map((item) => (
        <li>
          <a
            href={`${baseUrl}/${item.id}`}
            class="block text-sm text-text hover:text-primary transition-colors"
          >
            {item.title}
          </a>
        </li>
      ))
    }
  </ul>
</div>

---
import { Icon } from 'astro-icon/components';

interface Props {
  showLabel?: boolean;
}

const { showLabel = false } = Astro.props;
---

<a
  href="https://github.com/Janniku9/j9mh"
  class="group flex items-center gap-2 text-text hover:text-primary transition-all duration-300 relative"
  target="_blank"
  rel="noopener noreferrer"
>
  <div
    class="relative bg-background-dark border border-text/10 rounded-full p-1.5 transition-all duration-300 group-hover:bg-background-darker group-hover:shadow-xl group-hover:shadow-primary/5"
  >
    {/* Subtle gradient overlay on hover */}
    <div
      class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent
             rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300"
    >
    </div>
    <Icon
      name="mingcute:github-fill"
      class="w-6 h-6 relative z-10 text-text/70 group-hover:text-primary transition-colors duration-300"
    />
  </div>
  {
    showLabel && (
      <span class="text-text/70 group-hover:text-primary transition-colors duration-300 font-medium">
        GitHub
      </span>
    )
  }
  <span
    class="absolute top-full left-1/2 -translate-x-1/2 mt-4 px-2 py-1 text-sm bg-background-dark text-text rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap border border-text/10"
  >
    contribute today!
  </span>
</a>

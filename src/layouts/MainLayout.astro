---
import Image from 'astro/components/Image.astro';
import LanceSVG from '../assets/lance.svg';
import FontLoader from '../components/core/FontLoader.astro';
import Header from '../components/core/header/Header.astro';
import BackToTop from '../components/core/nav/BackToTop.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!-- 1. Update MainLayout.astro to include a modal root --><!-- MainLayout.astro --><!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/lance.svg" />
    <FontLoader />
  </head>
  <body class="bg-background text-text min-h-screen font-mono">
    <!-- Lance SVG background -->
    <div
      class="fixed right-8 w-3/5 h-auto opacity-5 pointer-events-none rotate-6 blur-sm
       md:top-1/5 md:-translate-y-1/5
       top-1/3 -translate-y-1/3"
    >
      <Image
        src={LanceSVG}
        alt=""
        class="w-full h-full object-contain opacity-50"
        aria-hidden="true"
      />
    </div>

    <!-- Header -->
    <Header height="64px" />

    <!-- Main Content -->
    <main class="pt-16">
      <slot />
    </main>

    <!-- Back to top button -->
    <div class="md:hidden">
      <BackToTop />
    </div>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
  }
</style>

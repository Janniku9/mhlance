---
import Image from 'astro/components/Image.astro';
import FontLoader from '../components/core/FontLoader.astro';

import LanceSVG from '../assets/lance.svg';
import { socials } from '../data/Socials';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="j9mh.ico" />
    <FontLoader />
  </head>
  <body class="bg-background text-text min-h-screen font-mono">
    <main class="min-h-screen relative">
      <div class="absolute inset-0 bg-gradient-to-b from-background-darker to-background opacity-5">
        <!-- Optional: Add a subtle grid pattern -->
        <div
          class="absolute inset-0 opacity-10 bg-[radial-gradient(circle_at_center,rgba(255,255,255,0.1)_1px,transparent_1px)] bg-[size:24px_24px]"
        >
        </div>
      </div>
      <!-- Added Lance SVG background -->
      <div
        class="absolute right-8 top-1/5 -translate-y-1/5 w-3/5 h-auto opacity-5 pointer-events-none rotate-6"
      >
        <Image src={LanceSVG} alt="" class="w-full h-full object-contain" aria-hidden="true" />
      </div>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
  }

  @keyframes title-fade-in {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-title {
    animation: title-fade-in 0.8s ease-out forwards;
  }
</style>

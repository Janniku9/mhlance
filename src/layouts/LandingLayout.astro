---
import FontLoader from '../components/core/FontLoader.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <FontLoader />
  </head>
  <body class="bg-background text-text min-h-screen font-mono">
    <main class="min-h-screen">
      <div class="absolute inset-0 bg-gradient-to-b from-background-darker to-background opacity-5">
      </div>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
  }
</style>

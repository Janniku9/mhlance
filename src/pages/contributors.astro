---
import LandingLayout from '../layouts/LandingLayout.astro';
import { Image } from 'astro:assets';
import { contributors } from '../data/Contributors';

// Import logo
import logo from '../assets/lance_logo_large3.png';
import NavigationButton from '../components/core/buttons/NavigationButton.astro';
import Community from '../components/landing/Community.astro';
import FullContributors from '../components/landing/FullContributors.astro';
---

<LandingLayout title="MH Lance - Contributors">
  <div class="min-h-screen flex flex-col items-center justify-center py-20 gap-12">
    <!-- Logo and Navigation -->
    <div class="w-full flex flex-col items-center mb-8">
      <a href="/" class="flex items-center gap-4">
        <Image
          src={logo}
          alt="MH Lance"
          width={350}
          height={80}
          class="mb-6 animate-title"
          loading="eager"
          decoding="async"
        />
      </a>
    </div>

    <p class="text-xl text-text/80 text-center max-w-2xl animate-title [animation-delay:200ms]">
      A big thank you to all the contributors who have helped make MH <span
        class="text-primary relative inline-block after:absolute after:bottom-0 after:left-0 after:w-full after:h-[2px] after:bg-primary after:origin-left hover:after:scale-x-100 after:scale-x-0 after:transition-transform"
        >Lance</span
      > possible.
    </p>

    <!-- Contributors Grid Component -->
    <FullContributors contributors={contributors} />

    <!-- Join Community Component -->
    <Community class="w-full max-w-7xl" />
  </div>
</LandingLayout>

<style>
  @keyframes title-fade-in {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-title {
    animation: title-fade-in 0.5s ease-out forwards;
  }
</style>

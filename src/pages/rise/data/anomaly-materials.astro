---
import ContentLayout from '../../../layouts/ContentLayout.astro';

import afflictedMaterials from '../../../assets/rise/data/afflicted_materials.png';
import Section from '../../../components/common/Section.astro';
import InfoBox from '../../../components/common/InfoBox.astro';
import ExternalLinkButton from '../../../components/common/ExternalLinkButton.astro';
import ImageCard from '../../../components/common/ImageCard.astro';
---

<ContentLayout>
  <Section>
    <p>Here's a quick overview of which monster drops what afflicted materials at what level</p>

    <InfoBox>
      <p>Thank you Gaudium for the original image!!</p>
      <ExternalLinkButton
        href="https://ko-fi.com/album/MHRS--Infographs-U7U5VJ80P"
        name="Original Image"
      />
    </InfoBox>

    <ImageCard
      src={afflictedMaterials}
      title="Afflicted Materials"
      alt="Afflicted Materials"
      maxWidth="1000px"
    />
  </Section>
</ContentLayout>
